{
  // http://jshint.com/docs/options/

  /* enforcing warnings */
  "bitwise": true,
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "freeze": true,
  "futurehostile": true,
  "globals": {},
  "latedef": true,
  "maxcomplexity": 5,
  "maxdepth": 4,
  "maxparams": 4,
  "noarg": true,
  "nocomma": true,
  "nonbsp": true,
  "nonew": true,
  "shadow": "inner",
  "singleGroups": true,
  "undef": true,
  "unused": "vars",

  /* relaxing */
  "debug": true,
  "strict": true,

  /* environments */
  "devel": false,
  "node": true
}
